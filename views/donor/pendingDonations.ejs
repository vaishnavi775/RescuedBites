<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Pending Donations</h5>
		</div>
		
		<div class="m-4">
			<% for(let i=0; i<pendingDonations.length; i++) { %>
				<div class="prof mb-4 p-4 shadow-sm" style="margin-left:2rem">
					<div class="mb-2">
						<span>Food Name:</span>
						<span><%= pendingDonations[i].foodName %></span>
					</div>
					
					<div class="mb-2">
						<span>Quantity:</span>
						<span><%= pendingDonations[i].quantity %></span>
					</div>
					
					<div class="mb-2">
						<span>Address given:</span>
						<span><%= pendingDonations[i].donor.address %></span>
					</div>
					
					<div class="mb-2">
						<span>Phone given:</span>
						<span><%= pendingDonations[i].donor.phone %></span>
					</div>
					
					<div class="mb-2">
						<span>Date:</span>
						<span><%= pendingDonations[i].expiryDate.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %></span>
					</div>
					
					<div class="mb-2">
						<span>Status:</span>
						
						<% if(pendingDonations[i].status == "pending") { %>
							<span class="text-pending">Your donation request hasn't been collected yet.</span>
						<% } %>
					</div>

					
				</div>
			<% } %>
		</div>
		
		
		
	</div>
</main>