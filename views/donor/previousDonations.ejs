<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Previous Donations</h5>
		</div>
		
		<div class="col col-sm-10 col-12 m-auto my-4 prof " style="max-height: 75%; overflow: auto;">
			<table class="table  table-striped table-hover m-0 prof">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Food type</th>
						<th scope="col">Quantity</th>
						<th scope="col">Status</th>
						<th scope="col">Organisation Name</th>
						<th scope="col">Collection Time</th>
						<th scope="col">Feedback from NGO</th>
					</tr>
				</thead>
				<tbody >
					<% for(let i=0; i<previousDonations.length; i++) { %>
						<tr>
							<th scope="row"> <%= i+1 %> </th>
							<td> <%= previousDonations[i].foodName %> </td>
							<td> <%= previousDonations[i].quantity %> </td>
							<td class="fw-bold text-<%= previousDonations[i].status %>"> <%= previousDonations[i].status %> </td>
							<td> <%= previousDonations[i].ngo.firstName + " " + previousDonations[i].ngo.lastName %> </td>
							<td> <%= previousDonations[i].collectionTime.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short"}) %> </td>
							<td><% if(previousDonations[i].ngoToDonorMsg != "") { %>
								<div class="mb-2">
									<div class="ms-3"><%= previousDonations[i].ngoToDonorMsg %></div>
								</div>
							<% } %></td>

						</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		
	</div>
</main>